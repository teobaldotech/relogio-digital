<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Relógio Digital</title>
  <style>
    body {
      background: #111;
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
      height: 100vh;
      margin: 0;
    }

    .clock {
      color: #0ff;
      font-size: 8vw; /* Responsivo */
      font-family: 'Courier New', Courier, monospace;
      background: #000;
      padding: 5vw 8vw;
      border-radius: 20px;
      box-shadow: 0 0 20px #0ff5;
      letter-spacing: 0.1em;
      text-shadow: 0 0 10px #0ff, 0 0 20px #0ff, 0 0 40px #0ff;
      animation: pulse 2s infinite alternate;
    }

    .date {
      margin-top: 20px;
      font-size: 4vw;
      font-family: Arial, sans-serif;
      color: #0ff;
      text-shadow: 0 0 5px #0ff, 0 0 15px #0ff;
    }

    .toggle-btn {
      margin-top: 25px;
      padding: 12px 25px;
      font-size: 1.2em;
      font-weight: bold;
      border: none;
      border-radius: 12px;
      cursor: pointer;
      background: #0ff;
      color: #111;
      box-shadow: 0 0 10px #0ff, 0 0 20px #0ff;
      transition: transform 0.2s, background 0.3s;
    }

    .toggle-btn:hover {
      transform: scale(1.05);
      background: #0cc;
    }

    @keyframes pulse {
      from { text-shadow: 0 0 10px #0ff, 0 0 20px #0ff; }
      to   { text-shadow: 0 0 25px #0ff, 0 0 50px #0ff; }
    }
  </style>
</head>
<body>
  <div class="clock" id="clock">00:00:00</div>
  <div class="date" id="date">Carregando...</div>
  <button class="toggle-btn" onclick="toggleFormat()">Alternar Formato</button>

  <script>
    let is24h = true; // formato inicial

    function updateClock() {
      const now = new Date();
      let h = now.getHours();
      let m = String(now.getMinutes()).padStart(2, '0');
      let s = String(now.getSeconds()).padStart(2, '0');
      let ampm = "";

      if (!is24h) {
        ampm = h >= 12 ? "PM" : "AM";
        h = h % 12 || 12; // transforma em 12h
      }
      h = String(h).padStart(2, '0');

      document.getElementById('clock').textContent = `${h}:${m}:${s} ${ampm}`;

      // Data em português
      const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
      document.getElementById('date').textContent = now.toLocaleDateString('pt-BR', options);
    }

    function toggleFormat() {
      is24h = !is24h; // alterna o formato
      updateClock();
    }

    setInterval(updateClock, 1000);
    updateClock();
  </script>
</body>
</html>
